<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="0dp" >

        <ImageView
            android:id="@+id/add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:contentDescription="@null"
            android:padding="8dp"
            android:scaleType="matrix"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5.0dip"
            android:padding="10.0dp"
            android:text="面壁者"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="80dp"
            android:padding="10.0dp"
            android:text="ID：123456789"
            android:textColor="#333"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <RelativeLayout
            android:id="@+id/area"
            android:clickable="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_strip_setting_top"
            android:focusable="true"
            android:gravity="center_vertical" >

            <TextView
                style="@style/B4_Font_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="地区" />

            <TextView
                style="@style/B4_Font_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="@string/area" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/arrow_right_gray_white"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:paddingRight="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/signature"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_strip_setting_middle"
            android:clickable="false"
            android:gravity="center_vertical" >

            <TextView
                style="@style/B4_Font_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="个性签名" />

            <TextView
                style="@style/B4_Font_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="@string/signature" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/arrow_right_gray_white"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:paddingRight="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gender"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_strip_setting_middle"
            android:clickable="false"
            android:gravity="center_vertical" >

            <TextView
                style="@style/B4_Font_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="性别" />

            <TextView
                style="@style/B4_Font_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="@string/gender" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/arrow_right_gray_white"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:paddingRight="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/album"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_strip_setting_bottom"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                style="@style/B4_Font_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="个人相册" />

            <ImageView
                android:id="@+id/xh_head_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:scaleType="matrix"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:layout_toRightOf="@id/xh_head_img"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:scaleType="matrix"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/arrow_right_gray_white"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:paddingRight="8dp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/addFirend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_style_green"
        android:text="加为好友"
        android:textColor="#fff"
        android:textSize="18sp" />

</LinearLayout>
